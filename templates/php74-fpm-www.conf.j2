[www]
user = {{ nginx_user }}
group = {{ nginx_user }}

listen = {{ PHP74_FPM_LISTEN_ADDRESS }}

listen.owner = {{ nginx_user }}
listen.group = {{ nginx_user }}

pm = dynamic
pm.max_children = {{ PHP74_FPM_PM_MAX_CHILDREN }}
pm.start_servers = {{ PHP74_FPM_PM_START_SERVERS }}
pm.min_spare_servers = {{ PHP74_FPM_PM_MIN_SPARE_SERVERS }}
pm.max_spare_servers = {{ PHP74_FPM_PM_MAX_SPARE_SERVERS }}

env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp